<section>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="h3">Exchange Online - welcome</h1>
                <hr class="with-margin">
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-lg-5">
                <h2 class="h4">Sign in</h2>
                <hr>
                <form method="POST" action="{{ login_form }}" id="loginForm">
                    <div class="form-group">
                        <label for="loginUsername">Username</label>
                        <input id="loginUsername" class="form-control" type="text" name="login" maxlength="32">
                    </div>
                    <div class="form-group">
                        <label for="loginPassword">Password</label>
                        <input id="loginPassword" class="form-control" type="password" name="password">
                    </div>
                    <button type="submit" class="btn btn-primary">Sing in</button>
                </form>
            </div>

            <div class="col-xs-12 col-lg-5 offset-lg-2 register-form">
                <h2 class="h4">Don't have an account?</h2>
                <hr>
                <form method="POST" action="{{ registration_form }}" id="registryForm">
                    <div class="form-group">
                        <label for="registerEmail">Email address</label>
                        <input id="registerEmail" class="form-control" type="email" name="email" maxlength="64">
                    </div>
                    <div class="form-group">
                        <label for="registerPassword">Password</label>
                        <input id="registerPassword" class="form-control" type="password" name="password">
                    </div>
                    <div class="form-group">
                        <label for="registerPasswordConfirm">Confirm password</label>
                        <input id="registerPasswordConfirm" class="form-control" type="password" name="password2">
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" name="terms">
                            I agree to the Terms
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary" data-loading-text="Creating...">Create account</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script nonce="{{ script_nonce }}">
    $(function() {
        Forms.initAjaxSubmit($('#registryForm'), function (message) {
            if (message.success === true) {
                var $form = $('#registryForm');
                $form.find('input:not(:checkbox)').val('');
                $form.find(':checkbox').prop('checked', false);
            }
        });

        Forms.initAjaxSubmit($('#loginForm'), function (message) {
            if (message.success === true) {
                location.href = '/dashboard';
            }
        });
    });
</script>